<div class="input-group-prepend">
    <span class="input-group-text">
        {{ filter.label|trans ~' '~ form.from.vars.label|trans }} <i class="far fa-calendar-alt ml-2"></i>
    </span>
</div>

{{- form_widget(form.from) -}}

<div class="input-group-prepend">
    <span class="input-group-text">
        {{ form.to.vars.label|trans }} <i class="far fa-calendar-alt ml-2"></i>
    </span>
</div>

{{- form_widget(form.to) -}}
