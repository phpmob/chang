{% extends 'bootstrap_4_horizontal_layout.html.twig' %}

{%- block form_start -%}
    {% if ajax|default(false) %}
        {% if ajax is same as(true) %}
            {% set attr = attr|merge({ 'data-ajax-form': action }) %}
        {% else %}
            {% set attr = attr|merge({ 'data-ajax-form': ajax }) %}
            {% set action = ajax %}
        {% endif %}
    {% endif %}
    {{ parent() }}
{% endblock %}
